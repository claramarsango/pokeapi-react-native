{
  "env": {
    "node": true,
    "es2021": true,
    "react-native/react-native": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "eslint:recommended",
    "plugin:react/jsx-runtime",
    "xo",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["prettier", "react", "react-native", "@typescript-eslint"],
  "rules": {
    "indent": ["Error", 2],
    "object-curly-spacing": ["Error", "always"]
  }
}
